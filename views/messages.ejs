<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link rel="stylesheet" href="/styles.css">
  <title>Messages</title>
</head>

<body>
  <%- include('partials/error') %>

  <header class="topbar">
    <div class="topbar__left">
      <p class="topbar__who">Signed in as <strong><%= firstName %> <%= lastName %></strong></p>
    </div>

    <div class="topbar__right">
      <% if (roleName === 'spectator') { %>
        <a class="btn btn--primary" href="/joinClub">Join The Club</a>
      <% } else { %>
        <a class="btn btn--primary" href="/<%= roleName %>/newMessage?role=<%= roleName %>">Create a new message</a>
      <% } %>
    </div>
  </header>

  <main class="wrap">
    <section id="messages" class="panel">
      <div class="panel__header">
        <h1 class="panel__title">Messages</h1>
      </div>

      <% if (messages && messages.length > 0) { %>

        <div class="messages">
          <% messages.forEach(({ message_id, title, content, creationdate, firstname, lastname }) => { %>

            <article class="card">
              <header class="card__header">
                <div class="card__meta">
                  <div class="card__author">
                    <span class="label">From</span>
                    <span class="value"><%= firstname %> <%= lastname %></span>
                  </div>

                  <div class="card__date">
                    <span class="label">Created</span>
                    <time class="value" datetime="<%= creationdate %>"><%= creationdate %></time>
                  </div>
                </div>

                <% if (roleName === 'admin') { %>
                  <form class="inline-form" action="/admin/deleteMessage" method="POST">
                    <input type="hidden" name="messageId" value="<%= message_id %>">
                    <button type="submit" class="icon-btn" aria-label="Delete message" title="Delete">
                      <svg viewBox="0 0 24 24" width="18" height="18" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M3 6H21M5 6V20C5 21.1046 5.89543 22 7 22H17C18.1046 22 19 21.1046 19 20V6M8 6V4C8 2.89543 8.89543 2 10 2H14C15.1046 2 16 2.89543 16 4V6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"></path>
                        <path d="M14 11V17" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"></path>
                        <path d="M10 11V17" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"></path>
                      </svg>
                    </button>
                  </form>
                <% } %>
              </header>

              <% if (title) { %>
                <h2 class="card__title"><%= title %></h2>
              <% } %>

              <p class="card__content"><%= content %></p>
            </article>

          <% }) %>
        </div>

      <% } else { %>
        <div class="empty">
          <p>No messages</p>
        </div>
      <% } %>

      <footer class="panel__footer">
        <a class="btn btn--ghost" href="/logOut">Log Out</a>
      </footer>
    </section>
  </main>

</body>
</html>
